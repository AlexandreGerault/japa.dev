@layouts.doc()
  @sidebar()
    @each(group in groups)
      @each(category in group.categories)
        @!sidebar.section({
          title: category.name,
          links: category.docs
        })
      @end
    @end
  @end

  <section class="bg-white min-h-screen lg:shadow-xl lg:ml-sidebar-small xl:ml-sidebar relative">
    @!header({
      links: Object.keys(zones).map((name) => {
        return {
          title: name,
          url: zones[name][0].landingDoc.url,
          active: doc.zone === name
        }
      }).concat([{ url: 'https://github.com/japa/runner', title: 'Github' }])
    })
    <main class="flex px-8 lg:px-12" up-main layout-main>
      @include('partials/markdown')
      @include('partials/toc')
    </main>
  </section>
@end