@set('type', node.properties.className.find((cls) => cls.includes('alert-')))
@set('classes', (node.properties.className || []).join(' '))

<div class="{{ classes }}">
  <div class="icon">
    @if(type === 'alert-note')
      @svg('heroicons-outline:information-circle', { class: 'w-5 h-5' })
    @elseif(type === 'alert-warning')
      @svg('heroicons-outline:bell-alert', { class: 'w-5 h-5' })
    @end
  </div>
<div class="text-md">
@dimerTree(node.children)~
</div>
</div>